<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dynamicButtonTheme">@style/ButtonTheme</item>
    </style>


    <style name="ButtonTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shape">rectangle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>

    </style>

    <style name="ButtonThemeRed" parent="ButtonTheme">

        <item name="android:background">@color/buttonColorRed</item>
    </style>
    <style name="ButtonThemePink" parent="ButtonTheme">
        <item name="android:background">@color/buttonColorPink</item>
    </style>
    <style name="ButtonThemePurple" parent="ButtonTheme">
        <item name="android:background">@color/buttonColorPurple</item>
    </style>

    <!-- Base application theme. -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">

    </style>

</resources>
